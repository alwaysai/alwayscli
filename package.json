{
  "name": "@alwaysai/always-cli",
  "description": "A library for building command-line interfaces",
  "version": "0.0.0-3",
  "main": "lib/index.js",
  "types": "lib/index.d.ts",
  "engines": {
    "node": ">=8.0.0"
  },
  "scripts": {
    "build": "tsc --project tsconfig.build.json",
    "build:clean": "rimraf lib && npm run build",
    "build:watch": "tsc --project . --watch",
    "example": "ts-node src/examples/echo.ts",
    "lint": "tslint --project tsconfig.build.json",
    "lint:fix": "npm run lint -- --fix",
    "test": "npm run lint && npm run test:unit && npm run build && npm run example -- --message ok",
    "test:unit": "jest --coverage src",
    "test:watch": "npm run test:unit -- --watch",
    "preversion": "npm test && npm run build:clean",
    "postversion": "npm publish"
  },
  "dependencies": {
    "@carnesen/run-and-catch": "0.0.0-0",
    "@carnesen/run-and-exit": "0.2.0",
    "@types/parse-json": "4.0.0",
    "@types/redent": "2.0.0",
    "parse-json": "4.0.0",
    "redent": "2.0.0"
  },
  "devDependencies": {
    "@alwaysai/tsconfig": "0.0.0",
    "@alwaysai/tslint-config": "0.0.0",
    "@types/jest": "24.0.9",
    "@types/node": "11.10.4",
    "jest": "24.1.0",
    "rimraf": "2.6.3",
    "ts-jest": "24.0.0",
    "ts-node": "8.0.2",
    "tslint": "5.13.1",
    "typescript": "3.3.3333"
  },
  "files": [
    "src",
    "lib"
  ],
  "keywords": [
    "typescript",
    "nodejs",
    "cli",
    "command",
    "line",
    "interface"
  ],
  "author": {
    "name": "alwaysAI, Inc.",
    "email": "contact@alwaysai.co"
  },
  "repository": "github:alwaysai/always-cli",
  "homepage": "https://github.com/alwaysai/always-cli#readme",
  "license": "MIT"
}
